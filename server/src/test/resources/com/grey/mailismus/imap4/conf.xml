<mailserver>
	<directory>
		<plainpass>Y</plainpass>
		<users>cp:/com/grey/mailismus/imap4/ms_users</users>
	</directory>
	<message_store>
		<userpath>%DIRVAR%/ms</userpath>
		<mailpath>Maildir</mailpath>
	</message_store>
	<imap>
		<server>
			<listeners>
				<listener name="UTEST_IMAP4" port="0">
					<server>
						<transcript>%DIRLOG%/transcripts/imap4.log</transcript>
					</server>
				</listener>
			</listeners>
		</server>
	</imap>
</mailserver>
